    <script type='text/javascript'>
        function openNav() 
        {
            document.getElementById("SidebarContainer").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
            document.getElementById("openClose").innerHTML = "<i class='fa fa-chevron-left'></i>"
            document.getElementById("openClose").setAttribute("onclick", "closeNav()");
        }

        function closeNav() 
        {
            document.getElementById("SidebarContainer").style.width = "0px";
            document.getElementById("main").style.marginLeft = "0px";
            document.getElementById("openClose").innerHTML = "<i class='fa fa-chevron-right'></i>"
            document.getElementById("openClose").setAttribute("onclick", "openNav()");
        }    
            
    </script>

