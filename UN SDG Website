<script type="text/javascript">
    function checkOption()
    {
        console.log("Got here");
        if (document.getElementById('o1').checked)
        {
            document.getElementById('rating').innerHTML = "Explain Yourself In This Form: <a href= 'https://docs.google.com/forms/d/e/1FAIpQLSf4KIfdkrKfOWC14s6ki-BdyWu7Qi_csdM6b-StTSJVA3j0wA/viewform?usp=sf_link'>Form</a>";
