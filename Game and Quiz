    <script type="text/javascript">
    function checkFavourite()
    {
    if (document.getElementById("rhp1").checked==true)
    {
        document.getElementById("message").innerHTML = "You are protective of yourself!";
    }
    if (document.getElementById("rhp2").checked==true)
    {
        document.getElementById("message").innerHTML = "You follow the crowd!";
    }
    if (document.getElementById("rhp3").checked==true)
    {
        document.getElementById("message").innerHTML = "You are like being different and being noticed!";
    }
    if (document.getElementById("rhp4").checked==true)
    {
        document.getElementById("message").innerHTML = "You like to make others laugh!";
    }
     
    }
    function checkAnswers()
    {
        correctAnswers = 0;
    if (document.getElementById("t1").checked)
    {
        correctAnswers++;
    }
    if (document.getElementById("t2").checked)
    {
        correctAnswers++;
    }
    if (document.getElementById("t3").checked)
    {
        correctAnswers++;
    }
    if (document.getElementById("t4").checked)
    {
        correctAnswers++;
    }
    if (!document.getElementById("nt1").checked)
    {
        correctAnswers++;
    }
    if (!document.getElementById("nt2").checked)
    {
        correctAnswers++;
    }
    if (!document.getElementById("nt3").checked)
    {
        correctAnswers++;
    }
    if (correctAnswers == 7)
    {
        document.getElementById("result").innerHTML = "Congratulations, you got them all right.";
    }
    else
    {
        document.getElementById("result").innerHTML = "Sorry, try again. You only got " + correctAnswers + " right. Try going back to my site to get a better understanding of the information.";
    }
    }
    
   
</script>
